# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536
OPENAI_TIMEOUT=300

# PostgreSQL Configuration (optional - defaults shown)
POSTGRES_USER=ai
POSTGRES_PASSWORD=ai
POSTGRES_DB=ai
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
# POSTGRES_URL=postgresql+psycopg://ai:ai@postgres:5432/ai  # Optional: override default connection string

# File Upload Configuration (optional - defaults shown)
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.pdf

# Application Configuration (optional - defaults shown)
LOG_LEVEL=INFO

# UI Service Configuration (optional - defaults shown)
API_BASE_URL=http://api:8000

# PostgreSQL Healthcheck Configuration (for docker-compose, optional)
POSTGRES_HEALTHCHECK_INTERVAL=10s
POSTGRES_HEALTHCHECK_TIMEOUT=5s
POSTGRES_HEALTHCHECK_RETRIES=5
